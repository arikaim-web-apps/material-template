{      
    "title": "Material Base Theme",
    "version": "1.0.1",
    "name": "material",
    "package-type": "template",
    "icon": "shop",
    "thumbnail": "material-template-thumbnail.jpg",
    "private-repository": true,
    "repository": "https://github.com/arikaim-web-apps/material-template.git",
    "require": {
        "components": [
            "icons",
            "tailwind"
        ],
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui",
            "tailwind"
        ],
        "extensions": [
            "users"
        ]
    },
    "routes": [
        {
            "path": "/",         
            "home": true,  
            "page": "home",
            "language-path": true,
            "name": "Home"                   
        },
        {
            "path": "/about",           
            "page": "about",
            "language-path": true,
            "name": "About"                   
        },
        {
            "path": "/privacy-policy",           
            "page": "privacy",
            "language-path": true,
            "name": "Privacy"                   
        },
        {
            "path": "/terms",           
            "page": "terms",
            "language-path": true,
            "name": "Terms"                   
        },
        {
            "path": "/blog",      
            "language-path": true,     
            "page": "blog",
            "name": "Blog"                   
        }
    ],
    "languages": [
        "en"      
    ],
    "themes": [
        "default"
    ],
    "default-theme": "default",
    "include": {     
        "components": [    
            "current>users"
        ],         
        "css": [
            "preflight.css",
            "tailwind.min.css",
            "style.css"           
        ],        
        "library": [
            "jquery",                                
            "arikaim",
            "arikaim-ui",
            "fomantic:form-validation"                                   
        ]       
    },
    "modules": {
    }
}